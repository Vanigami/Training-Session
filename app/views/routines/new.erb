<h1>Create a Routine</h1>
<p><%= @error %></p>
<form action="/routines" method="post">
    <label>Title</label>
    <input type="text" name="title">
    <label>Method</label>
    <textarea name="method"></textarea>
    <label>Image URL</label>
    <input type="text" name="image">
    <% @exercises.each do |exercise| %>
        <input type="checkbox" name="exercise[name]" value="<%= exercise.id %>"><%= exercise.name%></input>
    <% end %>
    <button type="submit">Add Routine</button>
</form>