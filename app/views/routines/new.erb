<h1>Create a Routine</h1>
<p><%= @error %></p>
<form action="/routines" method="post">
    <label>Title</label>
    <input type="text" name="routine[title]">
<br>
    <textarea rows="4" cols="50" name="routine[method]">Enter your routine here...</textarea>
    <label>Image URL</label>
    <input type="text" name="routine[image]">
    <label>Add existing exercise or create your own</label>
    <input type="text" name="exercise[name]">
    <button type="submit">Add Routine</button>
    <% @exercises.each do |exercise| %>
        <br>
        <input type="checkbox" name="routine[exercise_ids][]" value="<%= exercise.id %>"><%= exercise.name%></input>
    <% end %>
</form>


